<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane
        fx:id="root"
        cache="true"
        xmlns="http://javafx.com/javafx/16"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="@css/SplashScreen.css"
        fx:controller="io.setud.se_newspaper.controllers.SplashScreenController">
   <children>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Text fontSmoothingType="LCD" text="RMIT News Paper" textAlignment="CENTER" textOrigin="CENTER">
               <font>
                  <Font name="Arial Bold" size="48.0" />
               </font>
               <fill>
                  <LinearGradient cycleMethod="REFLECT" endX="1.0" endY="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.8355262875556946" green="0.25143152475357056" blue="0.25143152475357056" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </fill>
            </Text>
            <ProgressBar fx:id="progressBar" prefHeight="25.0" prefWidth="485.0" progress="0.0" />
         </children>
      </VBox>
   </children>
</StackPane>
